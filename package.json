{
  "name": "codevault-backend",
  "version": "1.0.0",
  "description": "CodeVault is full-stack web application built using MERN stack.designed to help devlopers save , manage and share code snippets efficiently",
  "keywords": [
    "codevault"
  ],
  "license": "ISC",
  "author": "Dipak Vidani",
  "type": "module",
  "main": "src/index.js",
  "imports": {
    "#root/*": "./src/*.js"
  },
  "scripts": {
    "dev": "nodemon -r dotenv/config --experimental-modules src/index.js",
    "start": "node --experimental-modules src/index.js",
    "preprod": "ls -la src/models/",
    "prod": "NODE_ENV=production node --experimental-modules src/index.js",
    "lint": "eslint .",
    "test": "jest",
    "pm2:start": "pm2 start ecosystem.config.js",
    "pm2:stop": "pm2 stop ecosystem.config.js",
    "pm2:restart": "pm2 restart ecosystem.config.js",
    "pm2:logs": "pm2 logs",
    "pm2:monitor": "pm2 monit"
  },
  "dependencies": {
    "bcryptjs": "^3.0.2",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "crypto": "^1.0.1",
    "dotenv": "^16.5.0",
    "express": "^5.1.0",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.15.1",
    "nodemailer": "^7.0.3",
    "prettier": "^3.5.3",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "nodemon": "^3.1.10"
  },
  "engines": {
    "node": "20.x"
  }
}
